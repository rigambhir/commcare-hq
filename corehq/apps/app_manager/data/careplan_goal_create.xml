	<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms"
	xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jr="http://openrosa.org/javarosa">
	<h:head>
		<h:title>New Careplan Goal</h:title>
		<model>
			<instance>
				<data xmlns:jrm="http://dev.commcarehq.org/jr/xforms"
					xmlns="http://dev.commcarehq.org/pact/careplan/goal/create"
					uiVersion="1" version="1" name="New Careplan Goal">
					<name />
					<description />
					<date_followup />
					
									
                    <case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id="">
                        <create>
                            <case_type>careplan_goal</case_type>
                            <owner_id/>
                            <case_name/>
                        </create>
                        <update>
                            <description/>
                            <date_followup/>
                        </update>
                        <index>
                            <parent case_type="careplan_target_case_type"/>
                        </index>
                    </case>

                    <group/>

                    <parent_case_id/>
				</data>
			</instance>
			<instance src="jr://instance/session" id="commcaresession" />
			<instance id="casedb" src="jr://instance/casedb"/>
			
			<bind nodeset="/data/case/@date_modified" type="xsd:dateTime" calculate="/data/meta/timeEnd"/>
			<bind nodeset="/data/case/@user_id" calculate="/data/meta/userID"/>
			<bind nodeset="/data/case/@case_id" type="xsd:string" calculate="uuid()"/>
			
			<bind nodeset="/data/case/create/case_name" type="xsd:string" calculate="/data/name"/>
			<setvalue event="xforms-revalidate" ref="/data/case/create/owner_id" value="instance('casedb')/casedb/case[@case_id = /data/parent_case_id]/@owner_id"/>
			
			<bind nodeset="/data/case/update/description" type="xsd:string" calculate="/data/description"/>
			<bind nodeset="/data/case/update/date_followup" calculate="/data/date_followup"/>
			
			<bind nodeset="/data/case/index/parent" calculate="/data/parent_case_id"/>
			
			<bind nodeset="/data/parent_case_id" calculate="instance('commcaresession')/session/data/case_id"/>

			<bind nodeset="/data/name" type="xsd:string" required="true()" />
			<bind nodeset="/data/description" type="xsd:string" required="false()" />
			<bind nodeset="/data/date_followup" type="xsd:date" required="true()" />

			<itext>
				<translation lang="en" default="">
					<text id="name-label">
						<value>Give this goal a short name which will be used to refer to it later</value>
					</text>
					<text id="description-label">
						<value>Describe the goal that the patient wants to reach</value>
					</text>
					<text id="date_followup-label">
						<value>When are they hoping to reach this goal?</value>
					</text>
				</translation>
			</itext>

		</model>
	</h:head>
	<h:body>
		<group ref="/data/group" appearance="field-list">
			<input ref="/data/name">
				<label ref="jr:itext('name-label')" />
			</input>
			<input ref="/data/description">
				<label ref="jr:itext('description-label')" />
			</input>
			<input ref="/data/date_followup">
				<label ref="jr:itext('date_followup-label')" />
			</input>
		</group>
	</h:body>
</h:html>